<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDadosMinhaInstituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Dados Instituição"
        android:textColor="@color/colorBlueDark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRazaoSocialInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="Razão Social"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lblDadosMinhaInstituicao"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCnpjInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="CNPJ"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRazaoSocialInstituicao_alert"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatTextView>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNomeInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="Nome Fantasia"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCnpjInstituicao_alert"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRuaInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="Rua"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeInstituicao_alert"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/consDadosMinhaInst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRuaInstituicao_alert">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNumeroRuaInsti_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Número"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@+id/consDadosMinhaInst">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtComplInsti_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Complemento"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@+id/consDadosMinhaInst"
            app:layout_constraintStart_toEndOf="@id/guidelineComplNum">

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineComplNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30">

        </androidx.constraintlayout.widget.Guideline>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtBairroInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="Bairro"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/consDadosMinhaInst"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/linDadosMinhaInst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txtBairroInstituicao_alert">

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCidadeInstituicao_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Cidade"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/linDadosMinhaInst"
        tools:ignore="MissingConstraints">



    </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEstadoInstituicao_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@+id/linDadosMinhaInst"
            app:layout_constraintStart_toEndOf="@id/guidelineMinhaInstituicao"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineMinhaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70">

        </androidx.constraintlayout.widget.Guideline>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtFoneInstituicao_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="Fone"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/linDadosMinhaInst">

    </androidx.appcompat.widget.AppCompatTextView>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBlueDark"
        app:layout_constraintTop_toBottomOf="@id/txtFoneInstituicao_alert"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDadosContasInst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Contas bancárias para deposito"
        app:layout_constraintTop_toBottomOf="@id/divider">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lblDadosContasInst"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

    </androidx.recyclerview.widget.RecyclerView>




</androidx.constraintlayout.widget.ConstraintLayout>