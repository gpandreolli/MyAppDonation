<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CadastrarConta">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="Cadastro de Conta"
        android:textColor="@color/colorHybridaMarron"
        android:background="@color/colorHybridaRosa"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"

        android:layout_marginBottom="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorHybridaMarron"
                android:text="Nome da Conta" />

            <EditText
                android:id="@+id/edtNomeConta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_edittext_bg"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorHybridaMarron"
                android:text="Banco" />

            <EditText
                android:id="@+id/edtBancoConta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_edittext_bg"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorHybridaMarron"
                android:text="Número do Banco" />

            <EditText
                android:id="@+id/edtNumeroBancoConta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_edittext_bg"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorHybridaMarron"
                android:text="Agência" />


            <EditText
                android:id="@+id/edtAgenciaConta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_edittext_bg"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorHybridaMarron"
                android:text="Número" />

            <EditText
                android:id="@+id/edtNumeroConta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_edittext_bg"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="number"
                android:maxLength="8" />



            <Button
                android:id="@+id/btnSalvarConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Salvar"
                android:textSize="22dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/login_button_bg"
                android:textAllCaps="false"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>