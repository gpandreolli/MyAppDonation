<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHybridaCinza"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/btnApoiador"
        android:layout_width="278dp"
        android:layout_height="115dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_button_bg"
        android:text="Apoiador"
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnInstituicao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInstituicao"
        android:layout_width="278dp"
        android:layout_height="115dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button_bg"
        android:text="Instituição"
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnApoiador" />

</androidx.constraintlayout.widget.ConstraintLayout>