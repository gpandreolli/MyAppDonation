<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.53"></androidx.constraintlayout.widget.Guideline>


        <TextView
            android:id="@+id/txtNome_ContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="left"
            android:text="Nome Conta"
            android:textColor="@color/colorBlueDark"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lblNomeBancoInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Banco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNome_ContaInstituicao">

        </TextView>

        <TextView
            android:id="@+id/txtNome_BancoInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-thin"
            android:text="Banco"
            android:textColor="@color/colorBlueDark"
            android:textSize="15dp"

            app:layout_constraintEnd_toStartOf="@+id/guidelineContaInstituicao"
            app:layout_constraintStart_toEndOf="@+id/lblNomeBancoInstituicao"
            app:layout_constraintTop_toBottomOf="@id/txtNome_ContaInstituicao" />

        <TextView
            android:id="@+id/lblAgenciaContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Agência"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNome_BancoInstituicao"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/txtAgencia_ContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-thin"
            android:text="Agencia"

            android:textColor="@color/colorBlueDark"
            android:textSize="15dp"

            app:layout_constraintStart_toStartOf="@id/txtNome_BancoInstituicao"
            app:layout_constraintTop_toBottomOf="@+id/txtNome_BancoInstituicao"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lblNumeroContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:text="Conta"
            app:layout_constraintStart_toEndOf="@id/guidelineContaInstituicao"
            app:layout_constraintTop_toBottomOf="@+id/txtNome_BancoInstituicao"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/txtNumero_ContaInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-thin"
            android:text="Número"
            android:textColor="@color/colorBlueDark"
            android:textSize="15dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblNumeroContaInstituicao"
            app:layout_constraintTop_toBottomOf="@+id/txtNome_BancoInstituicao" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

