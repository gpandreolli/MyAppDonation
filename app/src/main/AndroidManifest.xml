<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpa.myappdonation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconelove"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconelove"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.MinhasInstituicoesActivity"
            android:label="@string/title_activity_minhas_instituicoes"
            android:parentActivityName=".view.InicialActivityApoiador"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpa.myappdonation.view.InicialActivityApoiador" />
        </activity>
        <activity android:name=".view.CadastrarDoacoesActivity" />
        <activity
            android:name=".view.MinhasDoacoesActivity"
            android:label="@string/title_activity_minhas_doacoes"
            android:parentActivityName=".view.InicialActivityApoiador"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpa.myappdonation.view.InicialActivityApoiador" />
        </activity>
        <activity android:name=".view.ListaDoacoesActivity" />
        <activity android:name=".view.ListaInstActivity" />
        <activity android:name=".view.InicialActivityApoiador" />
        <activity android:name=".view.CadastrarConta" />
        <activity android:name=".view.UsuarioActivity" />
        <activity android:name=".view.ListContaActivity" />
        <activity android:name=".view.IncialActivityInsti" />
        <activity android:name=".view.CadastrarInstituicaoActivity" />
        <activity android:name=".view.AberturaActivity" />
        <activity android:name=".view.Cadastrar" />
        <activity android:name=".view.MainActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>